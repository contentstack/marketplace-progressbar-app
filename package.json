{
  "name": "marketplace-progress-bar-app",
  "version": "1.0.1",
  "description": "",
  "dependencies": {
    "@contentstack/app-sdk": "^1.4.1",
    "@datadog/browser-rum": "^4.42.1",
    "axios": "^1.4.0",
    "dotenv": "^16.2.0",
    "jotai": "^2.1.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.14.2",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "nth-check": "^2.0.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "sass": "^1.43.4",
    "typescript": "^4.5.2",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prettify": "prettier --write .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx . --ignore-pattern './node_modules/' --ignore-pattern './dist/'",
    "precommit": "npm run prettify && npm run lint:fix",
    "show-report": "npx playwright show-report",
    "test:chrome": "npx playwright test --config=playwright.config.ts --project=Chromium",
    "test:firefox": "npx playwright test --config=playwright.config.ts --project=firefox",
    "test:safari": "npx playwright test --config=playwright.config.ts --project=safari",
    "test:chrome-headed": "npx playwright test --headed --config=playwright.config.ts --project=Chromium",
    "test:firefox-headed": "npx playwright test --headed --config=playwright.config.ts --project=firefox",
    "test:safari-headed": "npx playwright test --headed --config=playwright.config.ts --project=safari"
  },
  "devDependencies": {
    "@playwright/test": "1.23.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jsonfile": "^6.1.1",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.1.2",
    "@types/react": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^4.3.8",
    "jsdom": "^22.1.0",
    "playwright": "1.23.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "validate-branch-name": "^1.3.0",
    "vite": "^4.4.5",
    "vitest": "^0.34.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contentstack-expert-services/marketplace-app-template.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/contentstack-expert-services/marketplace-app-template/issues"
  },
  "homepage": "https://github.com/contentstack-expert-services/marketplace-app-template#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npx validate-branch-name && rimraf build && rimraf dist && npm run precommit"
    }
  },
  "validate-branch-name": {
    "pattern": "^(feature|bugfix|hotfix)/ESI-[0-9]+-[a-z0-9-]{5,30}$",
    "errorMsg": "Please add valid branch name!"
  }
}
